{ deps, [
  { gen_driver, ".*", { git, "git://github.com/squidfunk/generic-linked-in-driver.git", "master" } }
]}.
{ port_env, [
      { "DRV_CFLAGS", "$DRV_CFLAGS -std=c99 -Ideps/gen_driver/c_src -D DRIVER_NAME=fdbdrv" },
      { "DRV_LDFLAGS", "$DRV_LDFLAGS -Wl,-z,defs " }

]}.
{ port_specs, [
  {".*", "priv/fdbdrv.so",[ "c_src/*.c", "deps/gen_driver/c_src/gen_driver.c" ]}
]}.
